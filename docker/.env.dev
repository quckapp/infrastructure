# =============================================================================
# QUCKAPP - DEVELOPMENT ENVIRONMENT
# =============================================================================
# Development environment for feature development and testing
# =============================================================================

ENVIRONMENT=development
COMPOSE_PROJECT_NAME=quckapp-dev

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres-dev.quckapp.internal
POSTGRES_PORT=5432
POSTGRES_USER=quckapp_dev
POSTGRES_PASSWORD=${POSTGRES_DEV_PASSWORD}
POSTGRES_DB=quckapp_dev
POSTGRES_SSL_MODE=prefer

# MongoDB
MONGO_HOST=mongo-dev.quckapp.internal
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${MONGO_DEV_PASSWORD}
MONGO_DB=quckapp_dev
MONGO_REPLICA_SET=rs0

# Redis
REDIS_HOST=redis-dev.quckapp.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_DEV_PASSWORD}
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch-dev.quckapp.internal
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_DEV_PASSWORD}
ELASTICSEARCH_INDEX_PREFIX=quckapp_dev

# ClickHouse
CLICKHOUSE_HOST=clickhouse-dev.quckapp.internal
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp_dev
CLICKHOUSE_PASSWORD=${CLICKHOUSE_DEV_PASSWORD}
CLICKHOUSE_DB=quckapp_dev_analytics

# Kafka
KAFKA_BROKERS=kafka-dev.quckapp.internal:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# S3/MinIO
S3_ENDPOINT=https://s3-dev.quckapp.internal
S3_BUCKET=quckapp-dev
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_DEV_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_DEV_SECRET_KEY}

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# API Gateway
GATEWAY_URL=https://api-dev.quckapp.io
CORS_ORIGINS=https://dev.quckapp.io,http://localhost:3000

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=${JWT_DEV_SECRET}
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=quckapp-dev

SECRET_KEY_BASE=${SECRET_KEY_BASE_DEV}
ENCRYPTION_KEY=${ENCRYPTION_KEY_DEV}

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
GRAFANA_URL=https://grafana-dev.quckapp.io
JAEGER_ENDPOINT=https://jaeger-dev.quckapp.internal:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-dev.quckapp.internal:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=1.0

# Sentry
SENTRY_DSN=${SENTRY_DEV_DSN}
SENTRY_ENVIRONMENT=development

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_DEV_API_KEY}
EMAIL_FROM=noreply-dev@quckapp.io

# SMS (Twilio - Test credentials)
TWILIO_ACCOUNT_SID=${TWILIO_TEST_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_TEST_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_TEST_PHONE}

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ML_ENABLED=true
FEATURE_DEBUG_MODE=true

# =============================================================================
# SCALING
# =============================================================================

REPLICAS_MIN=1
REPLICAS_MAX=3
CPU_REQUEST=50m
CPU_LIMIT=500m
MEMORY_REQUEST=128Mi
MEMORY_LIMIT=512Mi
