# =============================================================================
# QUCKAPP - QA ENVIRONMENT
# =============================================================================
# Quality Assurance environment for testing and validation
# =============================================================================

ENVIRONMENT=qa
COMPOSE_PROJECT_NAME=quckapp-qa

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres-qa.quckapp.internal
POSTGRES_PORT=5432
POSTGRES_USER=quckapp_qa
POSTGRES_PASSWORD=${POSTGRES_QA_PASSWORD}
POSTGRES_DB=quckapp_qa
POSTGRES_SSL_MODE=require

# MongoDB
MONGO_HOST=mongo-qa.quckapp.internal
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${MONGO_QA_PASSWORD}
MONGO_DB=quckapp_qa
MONGO_REPLICA_SET=rs0

# Redis
REDIS_HOST=redis-qa.quckapp.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_QA_PASSWORD}
REDIS_DB=0
REDIS_TLS_ENABLED=true

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch-qa.quckapp.internal
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_QA_PASSWORD}
ELASTICSEARCH_INDEX_PREFIX=quckapp_qa

# ClickHouse
CLICKHOUSE_HOST=clickhouse-qa.quckapp.internal
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp_qa
CLICKHOUSE_PASSWORD=${CLICKHOUSE_QA_PASSWORD}
CLICKHOUSE_DB=quckapp_qa_analytics

# Kafka
KAFKA_BROKERS=kafka-qa.quckapp.internal:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# S3
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
S3_BUCKET=quckapp-qa
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_QA_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_QA_SECRET_KEY}

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Gateway
GATEWAY_URL=https://api-qa.quckapp.io
CORS_ORIGINS=https://qa.quckapp.io

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=${JWT_QA_SECRET}
JWT_EXPIRY=12h
JWT_REFRESH_EXPIRY=3d
JWT_ISSUER=quckapp-qa

SECRET_KEY_BASE=${SECRET_KEY_BASE_QA}
ENCRYPTION_KEY=${ENCRYPTION_KEY_QA}

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
GRAFANA_URL=https://grafana-qa.quckapp.io
JAEGER_ENDPOINT=https://jaeger-qa.quckapp.internal:14268/api/v1/traces
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-qa.quckapp.internal:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.5

# Sentry
SENTRY_DSN=${SENTRY_QA_DSN}
SENTRY_ENVIRONMENT=qa

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_QA_API_KEY}
EMAIL_FROM=noreply-qa@quckapp.io

# SMS (Twilio - Test credentials)
TWILIO_ACCOUNT_SID=${TWILIO_TEST_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_TEST_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_TEST_PHONE}

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ML_ENABLED=true
FEATURE_DEBUG_MODE=false

# =============================================================================
# SCALING
# =============================================================================

REPLICAS_MIN=1
REPLICAS_MAX=3
CPU_REQUEST=100m
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi
