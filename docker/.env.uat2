# =============================================================================
# QUCKAPP - UAT2 ENVIRONMENT
# =============================================================================
# User Acceptance Testing environment 2 - Integration testing
# =============================================================================

ENVIRONMENT=uat2
COMPOSE_PROJECT_NAME=quckapp-uat2

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres-uat2.quckapp.internal
POSTGRES_PORT=5432
POSTGRES_USER=quckapp_uat2
POSTGRES_PASSWORD=${POSTGRES_UAT2_PASSWORD}
POSTGRES_DB=quckapp_uat2
POSTGRES_SSL_MODE=require

# MongoDB
MONGO_HOST=mongo-uat2.quckapp.internal
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${MONGO_UAT2_PASSWORD}
MONGO_DB=quckapp_uat2
MONGO_REPLICA_SET=rs0

# Redis
REDIS_HOST=redis-uat2.quckapp.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_UAT2_PASSWORD}
REDIS_DB=0
REDIS_TLS_ENABLED=true

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch-uat2.quckapp.internal
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_UAT2_PASSWORD}
ELASTICSEARCH_INDEX_PREFIX=quckapp_uat2

# ClickHouse
CLICKHOUSE_HOST=clickhouse-uat2.quckapp.internal
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp_uat2
CLICKHOUSE_PASSWORD=${CLICKHOUSE_UAT2_PASSWORD}
CLICKHOUSE_DB=quckapp_uat2_analytics

# Kafka
KAFKA_BROKERS=kafka-uat2.quckapp.internal:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# S3
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
S3_BUCKET=quckapp-uat2
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_UAT2_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_UAT2_SECRET_KEY}

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Gateway
GATEWAY_URL=https://api-uat2.quckapp.io
CORS_ORIGINS=https://uat2.quckapp.io

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=${JWT_UAT2_SECRET}
JWT_EXPIRY=12h
JWT_REFRESH_EXPIRY=3d
JWT_ISSUER=quckapp-uat2

SECRET_KEY_BASE=${SECRET_KEY_BASE_UAT2}
ENCRYPTION_KEY=${ENCRYPTION_KEY_UAT2}

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
GRAFANA_URL=https://grafana-uat2.quckapp.io
JAEGER_ENDPOINT=https://jaeger-uat2.quckapp.internal:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-uat2.quckapp.internal:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.5

# Sentry
SENTRY_DSN=${SENTRY_UAT2_DSN}
SENTRY_ENVIRONMENT=uat2

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_UAT_API_KEY}
EMAIL_FROM=noreply-uat2@quckapp.io

# SMS (Twilio - Test credentials)
TWILIO_ACCOUNT_SID=${TWILIO_TEST_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_TEST_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_TEST_PHONE}

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ML_ENABLED=true
FEATURE_DEBUG_MODE=false

# =============================================================================
# SCALING
# =============================================================================

REPLICAS_MIN=1
REPLICAS_MAX=3
CPU_REQUEST=100m
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi
