# =============================================================================
# QUCKAPP - STAGING ENVIRONMENT
# =============================================================================
# Pre-production environment mirroring production configuration
# =============================================================================

ENVIRONMENT=staging
COMPOSE_PROJECT_NAME=quckapp-staging

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres-staging.quckapp.internal
POSTGRES_PORT=5432
POSTGRES_USER=quckapp_staging
POSTGRES_PASSWORD=${POSTGRES_STAGING_PASSWORD}
POSTGRES_DB=quckapp_staging
POSTGRES_SSL_MODE=require
POSTGRES_POOL_SIZE=20

# MongoDB
MONGO_HOST=mongo-staging.quckapp.internal
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${MONGO_STAGING_PASSWORD}
MONGO_DB=quckapp_staging
MONGO_REPLICA_SET=rs0

# Redis
REDIS_HOST=redis-staging.quckapp.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_STAGING_PASSWORD}
REDIS_DB=0
REDIS_TLS_ENABLED=true
REDIS_CLUSTER_ENABLED=true

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch-staging.quckapp.internal
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_STAGING_PASSWORD}
ELASTICSEARCH_INDEX_PREFIX=quckapp_staging

# ClickHouse
CLICKHOUSE_HOST=clickhouse-staging.quckapp.internal
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp_staging
CLICKHOUSE_PASSWORD=${CLICKHOUSE_STAGING_PASSWORD}
CLICKHOUSE_DB=quckapp_staging_analytics

# Kafka
KAFKA_BROKERS=kafka-staging-1.quckapp.internal:9092,kafka-staging-2.quckapp.internal:9092,kafka-staging-3.quckapp.internal:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# S3
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
S3_BUCKET=quckapp-staging
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_STAGING_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_STAGING_SECRET_KEY}

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Gateway
GATEWAY_URL=https://api-staging.quckapp.io
CORS_ORIGINS=https://staging.quckapp.io

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=${JWT_STAGING_SECRET}
JWT_EXPIRY=8h
JWT_REFRESH_EXPIRY=2d
JWT_ISSUER=quckapp-staging

SECRET_KEY_BASE=${SECRET_KEY_BASE_STAGING}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
GRAFANA_URL=https://grafana-staging.quckapp.io
JAEGER_ENDPOINT=https://jaeger-staging.quckapp.internal:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-staging.quckapp.internal:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.2

# Sentry
SENTRY_DSN=${SENTRY_STAGING_DSN}
SENTRY_ENVIRONMENT=staging

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_STAGING_API_KEY}
EMAIL_FROM=noreply-staging@quckapp.io

# SMS (Twilio)
TWILIO_ACCOUNT_SID=${TWILIO_STAGING_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_STAGING_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_STAGING_PHONE}

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ML_ENABLED=true
FEATURE_DEBUG_MODE=false

# =============================================================================
# SCALING
# =============================================================================

REPLICAS_MIN=2
REPLICAS_MAX=5
CPU_REQUEST=250m
CPU_LIMIT=1000m
MEMORY_REQUEST=512Mi
MEMORY_LIMIT=1Gi
