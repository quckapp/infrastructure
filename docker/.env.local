# =============================================================================
# QUCKAPP - LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# Local development with all services running on localhost
# =============================================================================

ENVIRONMENT=local
COMPOSE_PROJECT_NAME=quckapp-local

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=quckapp
POSTGRES_PASSWORD=local_postgres_secret
POSTGRES_DB=quckapp

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=local_mongo_secret
MONGO_DB=quckapp

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=local_redis_secret

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=local_elastic_secret

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp
CLICKHOUSE_PASSWORD=local_clickhouse_secret
CLICKHOUSE_DB=quckapp_analytics

# Kafka
KAFKA_BROKERS=localhost:29092
KAFKA_UI_PORT=8085
ZOOKEEPER_PORT=2181

# MinIO (S3-Compatible)
MINIO_ENDPOINT=localhost:9010
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9010
MINIO_CONSOLE_PORT=9011
S3_BUCKET=quckapp-local

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# API Gateway
GATEWAY_PORT=3000
GATEWAY_URL=http://localhost:3000

# =============================================================================
# SERVICE PORTS
# =============================================================================

# NestJS Services
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
NOTIFICATION_SERVICE_PORT=3003

# Spring Boot Services
SPRING_AUTH_SERVICE_PORT=8081
WORKSPACE_SERVICE_PORT=8082
CHANNEL_SERVICE_PORT=8083
PERMISSION_SERVICE_PORT=8084
AUDIT_SERVICE_PORT=8085
ADMIN_SERVICE_PORT=8086

# Go Services
MESSAGE_SERVICE_PORT=5001
THREAD_SERVICE_PORT=5002
FILE_SERVICE_PORT=5003
MEDIA_SERVICE_PORT=5004
SEARCH_SERVICE_PORT=5005
BOOKMARK_SERVICE_PORT=5006
REMINDER_SERVICE_PORT=5007
ATTACHMENT_SERVICE_PORT=5008
CDN_SERVICE_PORT=5009

# Elixir Services
REALTIME_SERVICE_PORT=4000
PRESENCE_SERVICE_PORT=4001
CALL_SERVICE_PORT=4002
HUDDLE_SERVICE_PORT=4003
EVENT_BROADCAST_PORT=4004

# Python Services
ANALYTICS_SERVICE_PORT=8000
ML_SERVICE_PORT=8001
MODERATION_SERVICE_PORT=8002
SENTIMENT_SERVICE_PORT=8003

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=local_jwt_secret_change_this_in_production_32chars
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=quckapp-local

SECRET_KEY_BASE=local_secret_key_base_must_be_at_least_64_characters_long_for_phoenix_app_1234567890

ENCRYPTION_KEY=local_encryption_key_32_chars!!!

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
JAEGER_UI_PORT=16686
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=1.0

# =============================================================================
# EXTERNAL SERVICES (DISABLED FOR LOCAL)
# =============================================================================

# Firebase (disabled)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Email (use MailHog locally)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# SMS (disabled)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false
FEATURE_ML_ENABLED=false
