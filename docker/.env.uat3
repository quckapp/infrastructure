# =============================================================================
# QUCKAPP - UAT3 ENVIRONMENT
# =============================================================================
# User Acceptance Testing environment 3 - Performance testing
# =============================================================================

ENVIRONMENT=uat3
COMPOSE_PROJECT_NAME=quckapp-uat3

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres-uat3.quckapp.internal
POSTGRES_PORT=5432
POSTGRES_USER=quckapp_uat3
POSTGRES_PASSWORD=${POSTGRES_UAT3_PASSWORD}
POSTGRES_DB=quckapp_uat3
POSTGRES_SSL_MODE=require

# MongoDB
MONGO_HOST=mongo-uat3.quckapp.internal
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=${MONGO_UAT3_PASSWORD}
MONGO_DB=quckapp_uat3
MONGO_REPLICA_SET=rs0

# Redis
REDIS_HOST=redis-uat3.quckapp.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_UAT3_PASSWORD}
REDIS_DB=0
REDIS_TLS_ENABLED=true

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch-uat3.quckapp.internal
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_UAT3_PASSWORD}
ELASTICSEARCH_INDEX_PREFIX=quckapp_uat3

# ClickHouse
CLICKHOUSE_HOST=clickhouse-uat3.quckapp.internal
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=quckapp_uat3
CLICKHOUSE_PASSWORD=${CLICKHOUSE_UAT3_PASSWORD}
CLICKHOUSE_DB=quckapp_uat3_analytics

# Kafka
KAFKA_BROKERS=kafka-uat3.quckapp.internal:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# S3
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
S3_BUCKET=quckapp-uat3
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_UAT3_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_UAT3_SECRET_KEY}

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Gateway
GATEWAY_URL=https://api-uat3.quckapp.io
CORS_ORIGINS=https://uat3.quckapp.io

# =============================================================================
# SECURITY
# =============================================================================

JWT_SECRET=${JWT_UAT3_SECRET}
JWT_EXPIRY=12h
JWT_REFRESH_EXPIRY=3d
JWT_ISSUER=quckapp-uat3

SECRET_KEY_BASE=${SECRET_KEY_BASE_UAT3}
ENCRYPTION_KEY=${ENCRYPTION_KEY_UAT3}

# =============================================================================
# MONITORING
# =============================================================================

PROMETHEUS_ENABLED=true
GRAFANA_URL=https://grafana-uat3.quckapp.io
JAEGER_ENDPOINT=https://jaeger-uat3.quckapp.internal:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-uat3.quckapp.internal:4317

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.3

# Sentry
SENTRY_DSN=${SENTRY_UAT3_DSN}
SENTRY_ENVIRONMENT=uat3

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_UAT_API_KEY}
EMAIL_FROM=noreply-uat3@quckapp.io

# SMS (Twilio - Test credentials)
TWILIO_ACCOUNT_SID=${TWILIO_TEST_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_TEST_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_TEST_PHONE}

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_WEBSOCKET_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ML_ENABLED=true
FEATURE_DEBUG_MODE=false

# =============================================================================
# SCALING (Higher limits for performance testing)
# =============================================================================

REPLICAS_MIN=2
REPLICAS_MAX=5
CPU_REQUEST=200m
CPU_LIMIT=1000m
MEMORY_REQUEST=512Mi
MEMORY_LIMIT=1Gi
